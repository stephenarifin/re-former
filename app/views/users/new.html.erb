<%= form_for @user, url: {action: "create"} do |f| %>
  <%= f.label :username %>:
  <%= f.text_field :username, :placeholder => "Enter your username here" %> <br>
  <%= f.label :password %>:
  <%= f.password_field :password %> <br>
  <%= f.label :email %>:
  <%= f.email_field :email, :placeholder => "example@example.com" %> <br>
  <%= f.submit "Submit" %>
<% end %>